<!-- views/pages/shop/editProduct.ejs -->

<div class="container">
  <form action="/product/update/<%= product.id %>" method="POST"></form>
      <h1>Produkt bearbeiten</h1>
      <div>
        <div class="form-group">
            <label class="col-form-label-lg">Name</label>
            <input type="text" class="form-control" maxlength="80" value="<%= product.name %>" name="name">
        </div>
        <div class="form-group">
            <label class="col-form-label-lg">Preis</label>
            <input type="text" class="form-control" maxlength="8" value="<%= product.price %>" name="price">
        </div>
        <div class="form-group">
            <label class="col-form-label-lg">CafeType</label>
            <input type="text" maxlength="255" class="form-control" size="40" value="<%= product.cafetype %>" name="cafetype">
        </div>
    </div>
  
    <button type="submit" class="btn btn-primary">Aktualisieren</button>
    </form>
  </div>
  