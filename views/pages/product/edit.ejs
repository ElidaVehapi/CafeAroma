<!-- views/pages/shop/editProduct.ejs -->

<div class="container">
  <form action="/product/<%=product.id%>/update" method="post">
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />

    <h1>Bearbeite das Produkt</h1>
    <div>
      <div class="form-group">
        <label class="col-form-label-lg">Name</label>
        <input
          type="text"
          class="form-control"
          maxlength="80"
          value="<%= product.name %>"
          name="name"
        />
      </div>
      <div class="form-group">
        <label class="col-form-label-lg">Preis</label>
        <input
          type="text"
          class="form-control"
          maxlength="8"
          value="<%= product.price %>"
          name="price"
        />
      </div>
    </div>
    <a
      href="/product/<%=product.id %>/uploadImageForm"
      class="btn btn-outline-dark"
      >Bild hochladen</a
    >
    <button type="submit" class="btn btn-outline-dark" style="width: auto">
      Ã„ndern
    </button>
  </form>
</div>
