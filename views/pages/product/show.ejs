<!-- views/pages/shop/showProduct.ejs -->

<div class="container">
    <h4 class="card-header">
      Zeige Kaffe Produkt
    </h4>
    <div>
      <div class="row">
        <div class="col-2">
          Name
        </div> 
        <div class="col-10">
          <%= product.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
          Preis
        </div> 
        <div class="col-10">
          <%= product.price %>
        </div>
      </div>

      <% if(product.cafetype) { %>
        <div class="row">
          <div class="col-2">
                Typ 
          </div> 
          <div class="col-10">
            <%= product.cafetype %>
          </div>
        </div>
      <% } %>
      <% if(product.image) { %>
        <div class="row">
            <div class="col-2">
                Bild
            </div> 
            <div class="col-10">
                <img src="https://wetebucket.s3.us-west-2.amazonaws.com/<%= product.image %>">
            </div>
        </div>
<% } %>

    </div>
  </div>
</div>
