<div class="container">
    <div class="card w-100 mt-4">
        <h4 class="card-header">
            Kaffeprodukte anzeigen
        </h4>
        <div>
            <div class="row">
                <div class="col-2">
                    Name
                </div> 
                <div class="col-10">
                    <%= product.name %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    Preis
                </div> 
                <div class="col-10">
                    <%= product.price %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    CafeType
                </div> 
                <div class="col-10">
                    <%= product.cafetype %>
                </div>
            </div>
            <% if(product.name) { %>
                <div class="row">
                    <div class="col-2">
                        Cafe Type
                    </div> 
                    <div class="col-10">
                        <%= product.cafetype %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</div>