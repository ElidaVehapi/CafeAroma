<div class="container">
    <h1>CafeTypes</h1>

    <div class="item-content">
        <table class="table">
            <thead>
                <th>Name</th>
            </thead>
            <tbody>
                <% cafetypes.forEach(function(cafetype){ %>
                    <tr>
                        <td>
                            <%= cafetype.name %>
                        </td>
                        <td>
                            <a class="standard-btn" href="/cafetype/<%= cafetype.id %>/destroy">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

        <a class="brown-button"href="/cafetype/new">Add</a>
    </div>
</div>
</div>